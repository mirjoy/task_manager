<h1>All Tasks</h1>

<% @tasks.each do |task| %>
<div class="task"
  <h3><a href="/tasks/<%= task[:id] %>"><%= task[:id] %>. <%= task[:title] %></a></h3>
  <a href="/tasks/<%= task[:id] %>/edit"><p>Edit</p></a>
  <form action="/tasks/<%= task[:id] %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" value="delete">Delete</button>
  </form>
</div>
<% end %>
